<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/a9"
    android:id="@+id/bit">

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/welcome"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <!-- CardView Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <!-- Add Student -->
        <androidx.cardview.widget.CardView
            android:id="@+id/add_student_card"
            android:layout_width="300dp"
            android:layout_height="80dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/add_student_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/addstu"
                    android:layout_marginEnd="20dp"/>

                <TextView
                    android:id="@+id/add_student_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Student"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- View Students -->
        <androidx.cardview.widget.CardView
            android:id="@+id/view_students_card"
            android:layout_width="300dp"
            android:layout_height="80dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/view_students_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/viewstu"
                    android:layout_marginEnd="20dp"/>

                <TextView
                    android:id="@+id/view_students_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Students"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Remove Student -->
        <androidx.cardview.widget.CardView
            android:id="@+id/remove_student_card"
            android:layout_width="300dp"
            android:layout_height="80dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/remove_student_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/removestuu"
                    android:layout_marginEnd="20dp"/>

                <TextView
                    android:id="@+id/remove_student_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove Student"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Generate Question -->
        <androidx.cardview.widget.CardView
            android:id="@+id/generate_question_card"
            android:layout_width="300dp"
            android:layout_height="80dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/generate_question_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/generate"
                    android:layout_marginEnd="20dp"/>

                <TextView
                    android:id="@+id/generate_question_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generate Question"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Create Question -->
        <androidx.cardview.widget.CardView
            android:id="@+id/create_question_card"
            android:layout_width="300dp"
            android:layout_height="80dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/create_question_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/create"
                    android:layout_marginEnd="20dp"/>

                <TextView
                    android:id="@+id/create_question_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Question"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
